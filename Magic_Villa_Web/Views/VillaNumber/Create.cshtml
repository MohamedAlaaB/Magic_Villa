@model Magic_Villa_Web.Models.ViewModels.VillaNumberVm;

<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumberCreateDTO.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumberCreateDTO.VillaNo" class="form-control" />
                <span asp-validation-for="VillaNumberCreateDTO.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberCreateDTO.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumberCreateDTO.VillaID" asp-items="@Model.VillasNames">
                    <option>--Select-Villa--</option>
                </select>
                <span asp-validation-for="VillaNumberCreateDTO.VillaID" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberCreateDTO.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumberCreateDTO.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumberCreateDTO.SpecialDetails" class="text-danger"></span>
            </div>

           
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Villa" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}