@model Magic_Villa_Web.DTOs.RegisterationRequest

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
           
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <span asp-validation-for="UserName"></span>
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <span asp-validation-for="Name"></span>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name..." />

            </div>
            <div class="col-6 offset-3 pb-2">
                <span asp-validation-for="Password"></span>
                <input asp-for="Password" type="text" class="form-control" placeholder="Password..." />

            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>

            </div>
        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}